extends ../base.pug


block content
    h1 Edit Video
    form(method="POST")
        input(name="title", placeholder="Video Title",value=video.title, required)
        input(name="description",type="text", required, placeholder="Description", minlength=10, value=video.description)
        input(name="hashtags",type="text", required, placeholder="Hashtags, seperated by comma.", value=video.hashtags.join())
        input(type="submit",value="Save")